<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/notificationExecuteFragment">

    <fragment
        android:id="@+id/notificationExecuteFragment"
        android:name="com.itis.homework.ui.NotificationExecuteFragment"
        android:label="fragment_notification_execute"
        tools:layout="@layout/fragment_notification_execute" >
        <action
            android:id="@+id/action_notificationExecuteFragment_to_notificationSettingsFragment"
            app:destination="@id/notificationSettingsFragment" />
        <action
            android:id="@+id/action_notificationExecuteFragment_to_coroutinesFragment"
            app:destination="@id/coroutinesFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationSettingsFragment"
        android:name="com.itis.homework.ui.NotificationSettingsFragment"
        android:label="fragment_notification_settings"
        tools:layout="@layout/fragment_notification_settings" >
        <action
            android:id="@+id/action_notificationSettingsFragment_to_coroutinesFragment"
            app:destination="@id/coroutinesFragment" />
        <action
            android:id="@+id/action_notificationSettingsFragment_to_notificationExecuteFragment"
            app:destination="@id/notificationExecuteFragment" />
        <action
            android:id="@+id/action_notificationSettingsFragment_to_coroutinesFragment2"
            app:destination="@id/coroutinesFragment" />
    </fragment>
    <fragment
        android:id="@+id/coroutinesFragment"
        android:name="com.itis.homework.ui.CoroutinesFragment"
        android:label="fragment_coroutines"
        tools:layout="@layout/fragment_coroutines" >
        <action
            android:id="@+id/action_coroutinesFragment_to_notificationExecuteFragment"
            app:destination="@id/notificationExecuteFragment" />
        <action
            android:id="@+id/action_coroutinesFragment_to_notificationSettingsFragment"
            app:destination="@id/notificationSettingsFragment" />
    </fragment>
</navigation>