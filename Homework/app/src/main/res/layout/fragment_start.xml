<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.StartFragment">

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="phone"
        android:layout_margin="16dp"
        android:hint="@string/phone_et_hint"
        android:autofillHints="phone"/>

    <EditText
        android:id="@+id/questions_count_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phone_et"
        android:inputType="number"
        android:hint="@string/questions_count_et_hint"
        android:importantForAutofill="no"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/questions_count_et"
        android:layout_margin="16dp"
        android:text="@string/start_btn_text"
        android:textSize="24sp"
        android:enabled="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>