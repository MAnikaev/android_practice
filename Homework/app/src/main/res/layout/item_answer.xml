<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/answer_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Какой то вариант ответа"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/answer_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/answer_tv"
        app:layout_constraintStart_toEndOf="@id/answer_tv"
        app:layout_constraintBottom_toBottomOf="@id/answer_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>