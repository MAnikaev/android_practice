<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.DetailNewsFragment">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/news_img_hint"
        android:src="@drawable/error_img"/>

    <TextView
        android:id="@+id/news_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_image"
        android:textSize="36sp"
        android:layout_margin="16dp"
        android:text="@string/news_name_tv_text"/>

    <TextView
        android:id="@+id/news_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_name_tv"
        android:textSize="24sp"
        android:layout_margin="16dp"
        android:text="@string/news_description_tv_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>